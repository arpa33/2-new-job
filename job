#include <Servo.h>

Servo doorServo;
int servoPin = 13;
int touchPad = T0; // Touch pin 0 on ESP32

void setup() {
  Serial.begin(115200);
  doorServo.attach(servoPin);
  doorServo.write(0);
}

void loop() {
  int touchValue = touchRead(touchPad);

  if (touchValue < 25) { // Low value = touched
    doorServo.write(90);
    delay(1500);
    doorServo.write(0);
    delay(500);
  }
}
